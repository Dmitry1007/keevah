<div class="page-header">
  <h1>Loan Requests</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 pull-left">
      <select class="form-control btn-info">
        <option><%= link_to "All", loan_requests_path, method: :get, class: "btn btn-primary" %></option>
          <% Category.all.each do |category| %>
            <option><%= link_to category.title, loan_requests_path(category: category.title), class: "btn btn-primary" %></option>
          <% end %>
      </select>
    </div>
    <%= render "shared/search" %>
  </div>
</div>
