<div class="page-header">
  <h1>Loan Requests</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 pull-left btn-group" role="group">
      <%= link_to "All", loan_requests_path, method: :get, class: "btn btn-primary" %>
      <% Category.all.each do |category| %>
        <%= link_to category.title, loan_requests_path(category: category.title), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<br>

<div class="lender-thumbnails">
  <%= will_paginate %>
  <%= render "shared/lender_thumbnail" %>
</div>
